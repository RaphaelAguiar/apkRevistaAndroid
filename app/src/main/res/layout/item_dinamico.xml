<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/icons"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:background="@color/icons"

        >

        <ImageView
            android:id="@+id/capa"
            android:src="@drawable/revista06"
            android:layout_width="100dp"
            android:layout_height="140dp"

            />

        <ImageView
            android:id="@+id/estrela"
            android:src="@drawable/star_white1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-32dp"
            android:layout_marginTop="107dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:orientation="vertical"
        >

        <TextView
            android:text="Nome da Revista etste"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:id="@+id/nome"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/primary_text"
            android:textSize="25dp"
            />

        <TextView
            android:textStyle="italic"
            android:text="2ª Edição"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="-2dp"
            android:id="@+id/edicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textSize="20dp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/txtSubtitulo"
            android:text="Subtitulo da revista, texto que mostra."
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="6dp"
            android:textSize="16dp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="2dp"
            />
        <RelativeLayout
            android:background="@color/icons"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtQtPaginas"
                android:text="256 páginas"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                />



        </RelativeLayout>




    </LinearLayout>



</LinearLayout>